<?xml version="1.0" encoding="UTF-8"?>
<zk xmlns="http://www.zkoss.org/2005/zul"
    xmlns:h="http://www.w3.org/1999/xhtml"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

    <window title="ZK Window" border="normal" closable="true" maximizable="true" width="600px" height="200px" position="center" mode="overlapped" apply="ru.gs.zk.MyComposer">
        <hlayout>
            <label>Запросить отчет с </label>
            <datebox id="firstDate" format="dd.MM.yyyy HH:mm:ss" width="150px" />
            <label> по </label>
            <datebox id="secondDate" width="150px" />
            <button id="request">Запросить</button>
        </hlayout>
        <h:br/>
        <h:br/>
        <h:br/>
        <hlayout>
            <label>Данные с </label>
            <label id="fromDate" />
            <label> по </label>
            <label id="toDate" />
        </hlayout>
        <hlayout>
            <label>Количество строк: </label>
            <label id="count" style="color: blue;" />
        </hlayout>
        <hlayout>
            <label>Еще какой-то параметр: </label>
            <label id="someElseParam" style="color: blue;" />
        </hlayout>
    </window>

</zk>
